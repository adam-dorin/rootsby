{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "cli",
  "extends": "./base.json",
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "declarationMap": false,
    "incremental": true,
    "module": "esnext",
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": false,
    "target": "es5",
    "outDir": "./dist"
  },
  "include": ["commands/**/*"],
  "exclude": ["node_modules"]
}
